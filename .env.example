# Coinbase API Credentials
# Prime API (Spot Trading)
COINBASE_SPOT_API_KEY=your_spot_api_key_here
COINBASE_SPOT_API_SECRET=your_spot_api_secret_here
COINBASE_SPOT_PASSPHRASE=your_spot_passphrase_here

# Advanced Trade API (Derivatives/Perpetual Futures)
COINBASE_DERIVATIVES_API_KEY=your_derivatives_api_key_here
COINBASE_DERIVATIVES_API_SECRET=your_derivatives_api_secret_here
COINBASE_DERIVATIVES_PASSPHRASE=your_derivatives_passphrase_here

# Optional: Override config values
BASIS_SERVER_PORT=8080
BASIS_TRADING_DEFAULT_MIN_TRADE_SIZE=0.01
BASIS_TRADING_DEFAULT_MAX_POSITION=1.0
BASIS_TRADING_DEFAULT_TARGET_BASIS=5.0

# GCP Configuration (Alternative to using API keys above)
# Set these to use GCP Secret Manager instead of direct API keys
GCP_PROJECT_ID=your-gcp-project-id
GCP_USE_SECRETS=false  # Set to true to enable GCP Secret Manager